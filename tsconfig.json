{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "preserve",
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "typeRoots": ["node_modules/@types", "./types"],
    "baseUrl": ".",
    "paths": {
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@constants": ["src/constants"],
      "@constants/*": ["src/constants/*"],
      "@assets": ["src/assets"],
      "@assets/*": ["src/assets/*"],
      "@hooks": ["src/hooks"],
      "@hooks/*": ["src/hooks/*"],
      "@styles": ["src/styles"],
      "@styles/*": ["src/styles/*"],
      "@types/*": ["src/types/*"],
      "@util": ["src/util"],
      "@util/*": ["src/util/*"],
      "@pages/*": ["src/pages/*"]
    },
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true
  },
  "include": ["**/*.ts", "**/*.tsx", "src/index.js"],
  "exclude": ["node_modules"]
}
